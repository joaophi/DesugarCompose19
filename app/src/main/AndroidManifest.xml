<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.cta.compose">

    <uses-sdk tools:overrideLibrary="androidx.ui.tooling,
                                     androidx.compose.material,
                                     androidx.compose.foundation,
                                     androidx.compose.foundation.text,
                                     androidx.compose.material.icons,
                                     androidx.compose.animation,
                                     androidx.compose.foundation.layout,
                                     androidx.compose.ui,
                                     androidx.compose.animation.core,
                                     androidx.compose.ui.text,
                                     androidx.compose.runtime.savedinstancestate,
                                     androidx.compose.ui.graphics,
                                     androidx.compose.ui.unit,
                                     androidx.compose.ui.geometry,
                                     androidx.compose.ui.util,
                                     androidx.compose.runtime,
                                     androidx.compose.runtime.dispatch" />

    <application
        android:name="androidx.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Compose">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Compose.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>